{
  "name": "Catan Card Counter",
  "description": "Counts Resource Cards for colonist.io",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "icon64.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://colonist.io/"],
      "js": ["content.js"]
    }
  ]
}